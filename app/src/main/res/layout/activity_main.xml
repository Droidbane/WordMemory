<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/mainActiviy_firsText"
        android:textAlignment="center"
        android:textColor="#091932"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/kelime_degistir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kelime_degistir"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="changeWordButton"
        android:text="@string/change_word"
        android:textAllCaps="false"
        android:textColor="#091932"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/update_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_word"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="addWordButton"
        android:text="@string/add_word"
        android:textAllCaps="false"
        android:textColor="#091932"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/update_words"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_words"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/montserrat_medium"
        android:onClick="updateWordButton"
        android:text="@string/update_words_button"
        android:textAllCaps="false"
        android:textColor="#091932"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_word" />


</androidx.constraintlayout.widget.ConstraintLayout>